{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"lib": ["esnext", "dom", "DOM.Iterable"],
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"allowJs": true,
		"jsx": "react",
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@main/*": ["src/main/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"compileOnSave": true,
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
	"exclude": ["node_modules", "dist"]
}
